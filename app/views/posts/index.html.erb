

<div class="container mt-4">
  <h1 class="text-center">Lista de Publicaciones</h1>
  <%= link_to 'Nueva Publicación', new_post_path, class: "btn btn-primary mb-3" %>
  <% if @posts.empty? %>
    <div class="alert alert-warning">No hay publicaciones aún. ¡Crea una nueva!</div>
  <% else %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Título</th>
          <th>Contenido</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= truncate(post.body, length: 50) %></td>
            <td>
              <%= link_to 'Ver', post, class: "btn btn-info btn-sm" %>
              <%= link_to 'Editar', edit_post_path(post), class: "btn btn-warning btn-sm" %>
              <%= link_to 'Eliminar', post, method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>


